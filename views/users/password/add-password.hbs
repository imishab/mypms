<div class="container mt-5">

    <div class="card mb-2 mt-3">
        <div class="card-body p-2">
            <div class="d-flex align-items-center justify-content-between"> <a href="/all-passwords">
                    <i class="bi bi-arrow-left-circle text-white h3 align-middle mt-2 ms-3"></i>
                </a>
                <center>
                    <h5 style="margin-right: 30px;">Add New Password</h5>
                </center>

            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <form action="/add-password" method="POST">

                <div class="input-group mb-3"><span class="input-group-text" id="to">Title</span>
                    <input class="form-control" type="text" name="title" placeholder="" required>
                </div>




                <div class="input-group mb-3"><span class="input-group-text" id="to">Category</span>
                    <select class="form-select" id="defaultSelect" name="category" aria-label="Default select example">
                        <option value="" disabled selected>Select Category</option>
                        <option value="Google">Google</option>
                        <option value="Apple Id">Apple Id</option>
                        <option value="Social Media">Social Media</option>
                        <option value="Gaming">Gaming</option>
                        <option value="Other">Other</option>


                    </select>
                </div>
                <div class="input-group mb-3"><span class="input-group-text" id="to">Username / Email</span>
                    <input class="form-control" type="text" name="username" placeholder="" required>
                </div>
                <div class="input-group mb-3"><span class="input-group-text" id="to">Password</span>
                    <input class="form-control" type="text" name="password" placeholder="" required>
                </div>




                <div class="form-group mt-3">
                    <label class="form-label" for="message">Note</label>
                    <textarea class="form-control" id="message" name="note" cols="3" rows="5" placeholder=""></textarea>
                </div>
                <button class="btn btn-primary w-100" type="submit">Add</button>
            </form>
        </div>
    </div>
</div>